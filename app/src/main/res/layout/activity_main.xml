<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">


    <!--  Formula   -->


    <!--  Resultado -->
    <TextView
        android:id="@+id/Formula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        android:gravity="end"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp"
        tools:text="formula" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Resultado"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/Formula"
        tools:ignore="UnknownId" />


    <!--  Botões   -->

    <EditText
        android:id="@+id/Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint="Digite aqui"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/GridLayout"
        app:layout_constraintTop_toBottomOf="@id/Resultado"
        app:layout_constraintVertical_bias="0.15"
        tools:layout_editor_absoluteX="16dp" />

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="403dp"
        android:layout_height="520dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="180dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Resultado"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp">


        <!--  Limpar   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Limpar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/material_dynamic_primary20"
            android:text="c"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  Radiciacao   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Radiciacao"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/material_dynamic_primary20"
            android:text="√"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  Potencia   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Potencia"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/material_dynamic_primary20"
            android:text="^"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  Divisao   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Divisao"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/material_dynamic_primary20"
            android:text="÷"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  7   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Sete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="7"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  8   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Oito"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="8"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  9   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Nove"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="9"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  Multiplicacao   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Multiplicacao"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/material_dynamic_primary20"
            android:text="*"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  4   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Quatro"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="4"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  5   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Cinco"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="5"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  6   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Seis"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="6"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  Subtracao   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Subtracao"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/material_dynamic_primary20"
            android:text="-"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  1   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Um"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="1"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  2   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Dois"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="2"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  3   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Tres"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="3"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  Soma   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Soma"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/material_dynamic_primary20"
            android:text="+"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  0   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Zero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text="0"
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  Virgula   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Virgula"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:text=","
            android:textSize="30sp"
            app:cornerRadius="15dp" />


        <!--  Igual   -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Igual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/material_dynamic_primary20"
            android:text="="
            android:textSize="30sp"
            app:cornerRadius="15dp" />

    </GridLayout>





</androidx.constraintlayout.widget.ConstraintLayout>